		пЭтоПланСчетов = (пЭлем.Ключ = "ПланыСчетов");
		пЭтоПланОбмена = (пЭлем.Ключ = "ПланыОбмена");
		пЭтоРегистр = (СтрНайти(пЭлем.Ключ, "Регистры") = 1);

		Для Каждого ОбъектМД Из пРазделМД Цикл
			пПолноеИмя = ОбъектМД.ПолноеИмя();
