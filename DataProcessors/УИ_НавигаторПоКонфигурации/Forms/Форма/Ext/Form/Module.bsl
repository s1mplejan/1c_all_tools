					СтрДЗ.Имя = Элем.Ключ + " (" + Элем.Значение + ")";
					СтрДЗ.ПолучитьЭлементы().Добавить();
				КонецЦикла;
				
				//СтрДЗ = СтрокиДЗ.Добавить();
