		Таблица.Сортировать("ПолноеИмя");
	Иначе
		Таблица.Сортировать("Имя");
	КонецЕсли;

	Для Каждого Стр Из Таблица Цикл
		Струк = вСформироватьСтруктуруУзлаДЗ();
		ЗаполнитьЗначенияСвойств(Струк, Стр);
